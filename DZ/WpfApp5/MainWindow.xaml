<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="319*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Tb1" Margin="10,28,10,57" Text="" TextWrapping="Wrap" Grid.ColumnSpan="2" TextChanged="TextBox_TextChanged"/>
        <Label Content="Введите текст:" HorizontalAlignment="Center" Margin="10,2,0,0" VerticalAlignment="Top" Width="780" Grid.ColumnSpan="2"/>
        <Button Content="Посчитать колличество предложений." Margin="10,0,485,10" Grid.ColumnSpan="2" Click="Button_Click" Height="37" VerticalAlignment="Bottom"/>
        <TextBox x:Name="Tb2" Grid.Column="1" Margin="0,0,10,10" Text="Нажмите чтобы посчитать." TextWrapping="Wrap" Height="37" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="470"/>

    </Grid>
</Window>
